<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="500dp" android:height="60dp">
        <shape android:shape="rectangle">
            <size android:width="500dp" android:height="50dp"/>
            <solid android:color="@color/backgroundSelected"/>
        </shape>
    </item>

    <item android:left="8dp" android:width="1dp" >
        <shape android:shape="rectangle">
            <size android:width="1dp" android:height="50dp"/>
            <solid android:color="@color/backgroundLine"/>
        </shape>
    </item>

    <item android:top="50dp" android:left="2dp" android:right="8dp" android:width="500dp" android:height="1dp">
        <shape android:shape="rectangle">
            <size android:width="500dp" android:height="1dp"/>
            <solid android:color="@color/backgroundLine"/>
        </shape>
    </item>
</layer-list>